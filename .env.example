# Database (PostgreSQL)
DATABASE_URL=postgresql://gamerhub_app:YOUR_PASSWORD@localhost:5432/gamerhub

# Auth.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://gglobby.in

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Stripe (Required for Premium features)
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# LiveKit (Required for Voice/Video)
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret
NEXT_PUBLIC_LIVEKIT_URL=your_livekit_url

# OpenAI (Optional - for AI features)
OPENAI_API_KEY=your_openai_api_key

# Discord Integration (Optional)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_BOT_TOKEN=

# File Uploads (VPS only)
UPLOAD_DIR=/var/www/gglobby/uploads
